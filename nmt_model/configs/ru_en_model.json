{
  "logging_project_name": "tda_nmt_models",
  "seed": 42,
  "model": {
    "src_vocab_size": 10000,
    "trg_vocab_size": 10000,
    "d_model": 512,
    "nhead": 4,
    "num_encoder_layers": 6,
    "num_decoder_layers": 6,
    "dim_feedforward": 1024,
    "dropout_transformer": 0.2,
    "dropout_enc": 0.2,
    "padding_idx": 0,
    "max_length": 512,
    "emb_type": "shared"
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0
    }
  },
  "scheduler": {
    "type": "WarmupScheduler",
    "args": {
      "max_lr": 2e-4,
      "model_size": 512,
      "warmup_steps": 24000
    }
  },
  "tokenizer": {
    "type": "SeparateVocabTokenizer",
    "args": {
      "save_path": "../data/tokenizers/ru_en-sep_bpe-8k",
      "src_model_args": {
        "data": "../data/noisy.en-ru.ru",
        "vocab_size": 10000,
        "coverage": 0.9999,
        "pad_id": 0,
        "unk_id": 1,
        "bos_id": 2,
        "eos_id": 3
      },
      "trg_model_args": {
        "data": "../data/noisy.en-ru.ru",
        "vocab_size": 10000,
        "coverage": 0.9999,
        "pad_id": 0,
        "unk_id": 1,
        "bos_id": 2,
        "eos_id": 3
      }
    }
  },
  "data": {
    "train": {
      "datasets": [
        {
          "type": "CustomDataset",
          "args": {
            "src_path": "../data/noisy.en-ru.ru",
            "trg_path": "../data/noisy.en-ru.en",
            "max_length": 256
          }
        }
      ],
      "dataloader": {
        "batch_size": 32,
        "num_workers": 2,
        "shuffle": true,
        "drop_last": true,
        "collate_fn": {
          "type": "PadCollatorFn",
          "args": {
            "padding_value": 0
          }
        }
      }
    },
    "val": {
      "datasets": [
        {
          "type": "CustomDataset",
          "args": {
            "src_path": "../data/clean.paracrawl.valid.en-ru.ru",
            "trg_path": "../data/clean.paracrawl.valid.en-ru.en",
            "max_length": 256
          }
        }
      ],
      "dataloader": {
        "batch_size": 32,
        "num_workers": 2,
        "collate_fn": {
          "type": "PadCollatorFn",
          "args": {
            "padding_value": 0
          }
        }
      }
    }
  },
  "criterion": {
    "type": "CrossEntropyLoss",
    "args": {
      "ignore_index": 0
    }
  },
  "trainer": {
    "num_epochs": 500,
    "len_epoch": 1000,
    "max_gradient_norm": 3.0,
    "save_epoch_step": 20,
    "log_step": 100,
    "acc_steps": 1
  }
}
